    <header>
        <nav
            class="header-footer-border-color navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid" style="padding-left: 30px;">
                <a id="navbar-brand_id" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span style='color: var(--BrandColor); padding: 0px; margin: 0px;'>
                        AiChat
                        <span
                            style='font-weight: bold; font-size: 18pt; color: var(--BrandMvcColor); padding: 0px; margin: 0px;'>Mvc</span>
