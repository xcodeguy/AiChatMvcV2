<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/fonts/font-awesome.min.css" />

    <!-- THEME CSS -->
    @{
        var test = 1;
        switch (test)
        {
            case 0:
                <link rel="stylesheet" href="~/css/light_theme.css" asp-append-version="true" />
                break;
            case 1:
                <link rel="stylesheet" href="~/css/delphi_theme.css" asp-append-version="true" />
                break;
        }
    }
    <!-- END THEME CSS -->

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AiChatMvcV2.styles.css" asp-append-version="true" />
</head>
